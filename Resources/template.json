{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "cosmosDbCollectionId": {
            "type": "string"
        },
        "cosmosDbDatabaseId": {
            "type": "string"
        },
        "customerConnectionString": {
            "type": "string"
        },
        "environmentName": {
            "type": "string"
        },
        "functionAppName": {
            "type": "string"
        },
        "searchServiceName": {
            "type": "string"
        },
        "searchServiceAdminApiKey": {
            "type": "string"
        },
        "serviceBusConnectionString": {
            "type": "string"
        },
        "serviceBusQueueName": {
            "type": "string"
        },
        "sharedAppServicePlanName": {
            "type": "string"
        },
        "sharedAppServicePlanResourceGroup": {
            "type": "string"
        },
        "storageAccountName": {
            "type": "string"
        },
        "storageAccountKey": {
            "type": "string"
        }
    },
    "variables": {
        "appServiceAppInsightsName": "[concat(variables('ResourcePrefix'), '-ai')]",
        "buildingBlocksDfcBaseUrl": "https://raw.githubusercontent.com/SkillsFundingAgency/dfc-devops/master/ArmTemplates/",
        "resourcePrefix": "[tolower(concat('dss-', parameters('environmentName'), '-cust'))]",
        "storageAccountConnectionString": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccountName'),';AccountKey=', parameters('storageAccountKey'), ';EndpointSuffix=core.windows.net')]"
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "[variables('appServiceAppInsightsName')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('buildingBlocksDfcBaseUrl'), 'application-insights.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appInsightsName": {
                        "value": "[variables('appServiceAppInsightsName')]"
                    },
                    "attachedService": {
                        "value": ""
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "[parameters('functionAppName')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat('https://raw.githubusercontent.com/SkillsFundingAgency/dfc-devops/NCSD-1795-RemoveArmDeploymentDowntime/ArmTemplates/', 'app-service.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServiceName": {
                        "value": "[parameters('functionAppName')]"
                    },
                    "appServicePlanName": {
                        "value": "[parameters('sharedAppServicePlanName')]"
                    },
                    "appServicePlanResourceGroup": {
                        "value": "[parameters('sharedAppServicePlanResourceGroup')]"
                    },
                    "appServiceType": {
                        "value": "functionapp"
                    },
                    "deployStagingSlot": {
                        "value": true
                    },
                    "appServiceAppSettings": {
                        "value": [
                            {
                                "name": "EnvironmentName",
                                "value": "[toUpper(parameters('environmentName'))]"
                            },
                            {
                                "name": "FUNCTIONS_EXTENSION_VERSION",
                                "value": "~2"
                            },
                            {
                                "name": "MSDEPLOY_RENAME_LOCKED_FILES",
                                "value": "1"
                            },
                            {
                                "name": "AzureWebJobsStorage",
                                "value": "[variables('storageAccountConnectionString')]"
                            },
                            {
                                "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                                "value": "[reference(variables('appServiceAppInsightsName')).outputs.InstrumentationKey.value]"
                            },
                            {
                                "name": "SCM_TOUCH_WEBCONFIG_AFTER_DEPLOYMENT",
                                "value": "0"
                            },
                            {
                                "name": "CollectionId",
                                "value": "[parameters('cosmosDbCollectionId')]"
                            },
                            {
                                "name": "CustomerConnectionString",
                                "value": "[parameters('customerConnectionString')]"
                            },
                            {
                                "name": "CustomerSearchIndexName",
                                "value": "customer-search-index"
                            },
                            {
                                "name": "DatabaseId",
                                "value": "[parameters('cosmosDbDatabaseId')]"
                            },
                            {
                                "name": "LeaseCollectionName",
                                "value": "action-lease"
                            },
                            {
                                "name": "LeaseCollectionPrefix",
                                "value": "actionChangeFeedPrefix"
                            },
                            {
                                "name": "ServiceBusConnectionString",
                                "value": "[parameters('serviceBusConnectionString')]"
                            },
                            {
                                "name": "ChangeFeedQueueName",
                                "value": "dss.changefeedqueue"
                            },
                            {
                                "name": "QueueName",
                                "value": "[parameters('serviceBusQueueName')]"
                            },
                            {
                                "name": "SearchServiceName",
                                "value": "[parameters('searchServiceName')]"
                            },
                            {
                                "name": "SearchServiceAdminApiKey",
                                "value": "[parameters('searchServiceAdminApiKey')]"
                            },
                            {
                                "name": "SubscriptionCollectionId",
                                "value": "subscriptions"
                            },
                            {
                                "name": "SubscriptionDatabaseId",
                                "value": "subscriptions"
                            }
                        ]
                    }
                }
            },
            "dependsOn": [
                "[variables('AppServiceAppInsightsName')]"
            ]
        }
    ],
    "outputs": {}
}